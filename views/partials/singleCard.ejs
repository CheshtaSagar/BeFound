<div>
    <style>
        #board {
            width: 100%;
            height: 100%;
            position: relative;
            overflow: hidden;

        }
        
        .swiper-wrapper {
            align-items: center;
        }
        .swiper-slide {
            width: 320px;
            height: 320px;
            position: absolute;
            top: 50%;
            left: 50%;
            border-radius: 1%;
            box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.1);
            background-color: rgb(0, 0, 0);
            transform: translateX(-50%) translateY(-50%);
        }

        .swiper-slide img {
            width: 320px;
            height: 320px;
        }

        .info {
            width: 100%;
            padding: 8px 0;
            background: rgba(0, 0, 0, 0.6);
            position: absolute;
            bottom: 0;
            text-align: justify;
            border-radius: 0 0 5px 5px;
        }

        .info h3 {
            font-size: 15px;
            margin-left: 7px;
            font-weight: 100;
            color: #fff;
        }

        .info p {
            font-size: 10px;
            margin-left: 7px;
            color: #fff;
        }

        .info a {
            text-decoration: none;
            color: #fff;
            float: right;
            margin-right: 7px;
            margin-top: -28px;
            border: 1px solid #fff;
            border-radius: 20px;
            font-size: 10px;
            padding: 2px 8px;
        }
    </style>

    <div class="row" style="height: 400px; align-items: center">


        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
        <%if( recommendedUser.id !=user.id && recommendedUser.gender==user.preferences){%>
            
            <div id="board">

                <div class="swiper-slide" id="slider">
                    <img class="card-img-top rounded" height="90%" width="70%"
                        src="/image/<%= recommendedUser.displayPicture %>" style="object-fit: cover;">
                    <div class="info">
                        <h3>
                            <%= recommendedUser.username %>
                        </h3>
                        <p>
                            <%= recommendedUser.city %>
                        </p>
                        <a href="/userProfile/showProfile/<%=  recommendedUser.id %>">See Profile</a>
                    </div>

                </div>
            </div>
            <%}%>
        </div>
        

        <div class="swiper-pagination"></div>
           
    </div>
    </div>



    <script>
        let touchstartX = 0
        let touchendX = 0

        const slider = document.getElementById('slider')

        function handleGesture() {
            if (touchendX < touchstartX) alert('swiped left!')
            if (touchendX > touchstartX) alert('swiped right!')
        }

        slider.addEventListener('touchstart', e => {
            touchstartX = e.changedTouches[0].screenX
        })

        slider.addEventListener('touchend', e => {
            touchendX = e.changedTouches[0].screenX
            handleGesture()
        })
    </script>
</div>