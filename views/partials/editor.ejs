tinymce.init({
            selector:'.editor',
            menubar: false,
            statusbar: false,
            plugins: ' emoticons autoresize anchor autolink charmap code codesample directionality fullpage help hr insertdatetime link lists media nonbreaking pagebreak preview print searchreplace table template textpattern toc visualblocks visualchars',
            toolbar: ' emoticons h1 h2 bold italic strikethrough blockquote bullist numlist backcolor | undo redo  | removeformat help fullscreen ',
            skin: 'bootstrap',
            toolbar_drawer: 'floating',
            images_upload_url: 'postAcceptor.php',
            min_height: 200,           
            autoresize_bottom_margin: 16,
            setup: (editor) => {
                editor.on('init', () => {
                    editor.getContainer().style.transition="border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out"
                });
                editor.on('focus', () => {
                    editor.getContainer().style.boxShadow="0 0 0 .2rem rgba(0, 123, 255, .25)",
                    editor.getContainer().style.borderColor="#80bdff"
                });
                editor.on('blur', () => {
                    editor.getContainer().style.boxShadow="",
                    editor.getContainer().style.borderColor=""
                });
            }
        });
</script>