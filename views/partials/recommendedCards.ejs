<div>

<style>

.swiper-container{
    height: 350px;
    
}
.swiper-wrapper{
   align-items: center;
}
.swiper-slide{
    width: 250px;
    height: 180px;
}
.swiper-slide img{
    width: 250px;
    height: 180px;
}
.swiper-slide-active{
    transform: scale(1,1.5);
    transition: .4s;
}
.info{
    width: 100%;
    padding: 8px 0;
    background: rgba(0,0,0,0.6);
    position: absolute;
    bottom: 0;
    text-align: justify;
    border-radius: 0 0 5px 5px;
}
.info h3{
    font-size: 15px;
    margin-left: 7px;
    font-weight: 100;
    color: #fff;
}
.info p{
    font-size: 10px;
    margin-left: 7px;
    color: #fff;
}
.info a{
    text-decoration: none;
    color: #fff;
    float: right;
    margin-right: 7px;
    margin-top: -28px;
    border: 1px solid #fff;
    border-radius: 20px;
    font-size: 10px;
    padding: 2px 8px;
}
.swiper-pagination{
    bottom: 0 !important;
}
</style>

   <div class="row" style="height: 400px; text-align: center;">

   
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
    <% recommendedUsers.forEach(function(recUser){ %>
        <%if(recUser.id !=user.id && recUser.gender==user.preferences){%>
            <div class="swiper-slide">
               
                    <img class="card-img-top rounded" height="90%" width="70%"
                        src="/image/<%= recUser.displayPicture %>">
                    <div class="info" >
                        <h3><%= recUser.username %></h3>
                        <p><%= recUser.city %></p>
                        <a href="/userProfile/showProfile/<%= recUser.id %>">See Profile</a>
                    </div>
                       
             </div>
                    
                    <% }});%>
        </div>
        
                    <div class="swiper-pagination"></div>
                  
                  
                  
                </div>
                </div>
              
            </div>