<!----modal that shows uploaded images and dp of user in edit profile page-->

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg rounded">

        <div class="modal-content" style="background-color: black; height: 90%;">




            <div style="background-color: rgb(31, 29, 29); background: linear-gradient(to bottom, rgb(255, 254, 254) 50%, rgb(0, 0, 0) 50%);
              border-radius: 20px; 
                padding-left: 10px; 
                  padding-top:10px ; 
                    text-align: center;
                   ">




                <%if(user.displayPicture == '{}'){%>

                <img src="https://i.pinimg.com/originals/fd/14/a4/fd14a484f8e558209f0c2a94bc36b855.png" style="border:3px solid black;"class="rounded-circle" width="100px" height="100px">
                
                <%}else{%>   
                <img src="<%= user.displayPicture.image %>" style="border:3px solid black;"class="rounded-circle" width="100px" height="100px">
                <%}%>
                <h5 class="text-capitalize" style="color: rgb(255, 255, 255); text-shadow: blue; object-fit: cover;">
                    <%= user.username%>
                </h5>
                <h5 class="text-capitalize"
                style="font-family: 'Spectral', serif; color:white; text-shadow: blue; text-align: center;">
                <%= user.city%>
            </h5>
            </div>
           

            <div>

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

                    
                    <div class="carousel-inner">

                        <%if(user.profilePictures.length >0 ){%>
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="<%= user.profilePictures[0].image %>" height="350px"
                                alt="Upload image first!!" style="object-fit: contain;">
                        </div>


                        <div class="carousel-item">
                            <img class="d-block w-100" src="<%= user.profilePictures[1].image %>" height="350px"
                                alt="Upload image first!!" style="object-fit: contain;">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="<%= user.profilePictures[2].image %>" height="350px"
                                alt="Upload image first!!" style="object-fit: contain;">
                        </div>

                        <div class="carousel-item">
                            <img class="d-block w-100" src="<%= user.profilePictures[3].image %>" height="350px"
                                alt="Upload image first!!" style="object-fit: contain;">
                        </div>

                        <%}else{%>
                            <div class="carousel-item active">
                                <img class="d-block w-100"  height="350px"
                                    alt="Upload image first!!" style="object-fit: contain;">
                            </div>
                            <%}%>

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>


            </div>
        </div>
    </div>
</div>