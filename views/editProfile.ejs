<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Mali:wght@500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Inline&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Spectral:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/register.css" type="text/css">
    <title>Edit Profile : <%= user.username %>
    </title>
</head>


<body>
    <!--importing navbar-->

    <%- include ('indexPartials/nav2') %>


        <!--edit profile page design starts here-->
        <div class="register__body">
            <div class="container-fluid">
                <div class="row" id="chat-botCard">

                    <div class="col-12 col-lg-6 col-md-12 col-sm-12"
                        style="padding-top: 5px; padding-bottom: 5px; background-color:rgb(255, 234, 255);">

                        <!----register form-->
                        <div class="bg" id="col1">
                            </br>
                            <h3 class="text-center mb-3">
                                <i class="fas fa-user-plus"></i> Edit Profile
                            </h3>
                            <div class="signup-form " style="overflow: auto;">

                                <form action="/userProfile/editProfile" method="POST">

                                    <!---importing msgs column-->
                                    <%- include ('partials/messages') %>

                                        <!--username-->
                                        <div class="form-group">
                                            <input type="text" class="form-control input-lg" id="username"
                                                name="username" placeholder=" "
                                                value="<%= typeof username!= 'undefined' ? username : user.username %>" />
                                        </div>

                                        <!--email-->
                                        <div class="form-group">
                                            <input type="email" class="form-control input-lg" id="email" name="email"
                                                placeholder="Email Address"
                                                value="<%= typeof email != 'undefined' ? email : user.email %>"
                                                readonly />
                                        </div>

                                        </br>
                                        <hr style="width:50%; background-color:rgb(114, 15, 180)">
                                        </hr>

                                        <!---gender-->
                                        <div class="form-group">
                                            <label for="gender">Gender</label>
                                            <select class="form-control" id="gender" name="gender" placeholder=""
                                                value="<%= typeof gender != 'undefined' ? gender : user.gender %>">
                                                <% if(user.gender==="Male" ){%>
                                                    <option selected>Male</option>
                                                    <%}else {%>
                                                        <option> Male</option>
                                                        <%}%>


                                                            <% if(user.gender==="Female" ){%>
                                                                <option selected>Female</option>
                                                                <%}else {%>
                                                                    <option> Female</option>
                                                                    <%}%>

                                                                        <% if(user.gender==="Others" ){%>
                                                                            <option selected>Others</option>
                                                                            <%}else {%>
                                                                                <option> Others</option>
                                                                                <%}%>
                                            </select>
                                        </div>


                                        <!----City-->
                                        <div class="form-group">
                                            <label for="city">City/State</label>
                                            <input type="text" class="form-control" id="city" name="city"
                                                placeholder=" "
                                                value="<%= typeof city != 'undefined' ? city :  user.city %>" />
                                        </div>


                                        <!---Age-->
                                        <div class="form-group">
                                            <label for="age">Age</label>
                                            <input type="number" class="form-control input-lg" id="age" name="age"
                                                placeholder="Enter age" required="required" min="10"
                                                value="<%= typeof age != 'undefined' ? age : user.age %>" />
                                        </div>

                                        </br>
                                        <hr style="width:50%; background-color:rgb(114, 15, 180)">
                                        </hr>

                                        <!---preferences-->
                                        <div class="form-group">
                                            <label for="preferences">Preferences</label>
                                            <select class="form-control" id="preferences" name="preferences"
                                                placeholder=" "
                                                value="<%= typeof preferences != 'undefined' ? preferences : user.preferences %>">
                                                <% if(user.preferences==="Male" ){%>
                                                    <option selected>Male</option>
                                                    <%}else {%>
                                                        <option> Male</option>
                                                        <%}%>


                                                            <% if(user.preferences==="Female" ){%>
                                                                <option selected>Female</option>
                                                                <%}else {%>
                                                                    <option> Female</option>
                                                                    <%}%>

                                                                        <% if(user.preferences==="Others" ){%>
                                                                            <option selected>Others</option>
                                                                            <%}else {%>
                                                                                <option> Others</option>
                                                                                <%}%>


                                            </select>
                                        </div>


                                        <!---Age Range-->
                                        <div class="form-group">
                                            Age-Range
                                            <div class="row">

                                                <div class="col-6">

                                                    <input type="number" class="form-control input-lg" id="lowerLimit"
                                                        name="lowerLimit" placeholder="Enter min-age"
                                                        required="required" min="18"
                                                        value="<%= typeof lowerLimit != 'undefined' ? lowerLimit : user.ageRange.lowerLimit %>" />
                                                </div>
                                                <div class="col-6">
                                                    <input type="number" class="form-control input-lg" id="upperLimit"
                                                        name="upperLimit" placeholder="Enter max-age"
                                                        required="required" min="18"
                                                        value="<%= typeof upperLimit != 'undefined' ? upperLimit : user.ageRange.upperLimit %>" />
                                                </div>
                                            </div>
                                        </div>

                                        <!---preferred radius-->
                                        <div class="form-group">
                                            <label for="radius">Find people within distance of:</label>
                                            <input type="number" class="form-control input-lg" id="radius" name="radius"
                                                step="0.1" placeholder="Distance(in km)" min="0"
                                                value="<%= typeof radius != 'undefined' ? radius : user.radius %>" />
                                        </div>

                                        <!----Add Bio-->
                                        <div class="form-group">
                                            <label for="bio">Edit Bio</label>
                                            <textarea class="form-control ta" id="bio" rows="6"
                                                placeholder= <%=user.bio%> name="bio"
                                                value="<%= typeof bio != 'undefined' ? bio : user.bio %>"></textarea>
                                        </div>


                                        <div class="form-group">
                                            <button type="submit"
                                                class="btn btn-primary btn-lg btn-block signup-btn">Update</button>
                                        </div>
                                </form>


                            </div>

                        </div>


                    </div>

                    <!----ends here-->



                    <!------upload pictures card starts here-->
                    <div class="col-12 col-lg-6 col-md-12 col-sm-12"
                        style="padding-top: 5px; padding-bottom: 5px; background-color:rgb(255, 234, 255);">


                        <div class="bg" id="col1">
                            </br>
                            <h3 class="text-center mb-3">
                                <i class="fas fa-camera"></i> Upload Images
                            </h3>
                            <div class="signup-form " style="overflow: auto;">

                                <form action="/upload/uploadImages" method="POST" enctype="multipart/form-data">

                                    <!---importing msgs column-->
                                    <%- include ('partials/messages') %>

                                        <div class="custom-file">
                                            <h6>Upload your Profile Picture</h6>
                                            <input type="file" data-file_types="jpg|jpeg|png" class="custom-file-input"
                                                id="file" name="file" onchange="readSingleFile(this.files)">
                                            <label class="custom-file-label" id="file-label" style="border-radius:10px;"
                                                for="file">Choose
                                                profile picture</label>
                                        </div>

                                        </br>
                                        <hr style="width:60%; background-color:rgb(114, 15, 180)">
                                        </br>

                                        </br>
                                        <h6>Upload more images for your profile</h6>
                                        <!----1------->
                                        <div class="custom-file">
                                            <h6>Upload</h6>
                                            <input type="file" data-file_types="jpg|jpeg|png" class="custom-file-input"
                                                id="file1" name="file1" onchange="readSingleFile1(this.files)">
                                            <label class="custom-file-label" id="file-label1"
                                                style="border-radius:10px;" for="file1">Choose
                                                image</label>
                                        </div>

                                        <!----2------->
                                        <div class="custom-file">
                                            <h6>Upload</h6>
                                            <input type="file" data-file_types="jpg|jpeg|png" class="custom-file-input"
                                                id="file2" name="file2" onchange="readSingleFile2(this.files)">
                                            <label class="custom-file-label" id="file-label2"
                                                style="border-radius:10px;" for="file2">Choose
                                                image</label>
                                        </div>

                                        <!----3------->
                                        <div class="custom-file">
                                            <h6>Upload</h6>
                                            <input type="file" data-file_types="jpg|jpeg|png" class="custom-file-input"
                                                id="file3" name="file3" onchange="readSingleFile3(this.files)">
                                            <label class="custom-file-label" id="file-label3"
                                                style="border-radius:10px;" for="file3">Choose
                                                image</label>
                                        </div>



                                        <!----4------->
                                        <div class="custom-file">
                                            <h6>Upload</h6>
                                            <input type="file" data-file_types="jpg|jpeg|png" class="custom-file-input"
                                                id="file4" name="file4" onchange="readSingleFile4(this.files)">
                                            <label class="custom-file-label" id="file-label4"
                                                style="border-radius:10px;" for="file4">Choose image
                                            </label>
                                        </div>

                                        </br>
                                        <hr style="width:60%; background-color:rgb(114, 15, 180)">
                                        </br>
                                        <div class="form-group">
                                            <button type="submit"
                                                class="btn btn-primary btn-lg btn-block signup-btn">Upload</button>
                                        </div>
                                </form>


                            </div>

                        </div>


                    </div>

                </div>



                <!----Show profile preview button-->
                <button class="btn btn-default" data-toggle="modal" data-target=".bd-example-modal-lg">
                    <img src="/images/preview1.jpg" class="img-fluid" style="border-radius: 50%; object-fit: contain;
                    border:3px solid black; height:70px ;width:70px;
                     box-shadow: 7px 5px 10px rgb(161, 113, 250);
                     position: fixed;
                  bottom: 9px;
                  right: 50px;">
                </button>

                <%- include ('partials/profilePreview') %>
            </div>

        </div>




        <%- include ('partials/footer') %>

</body>
<!-------->
<script>
    //script for changing "choose file" to file name
    function readSingleFile(e) {
        const name = e[0].name;
        document.getElementById("file-label").textContent = name;
    }

    function readSingleFile1(e) {
        const name = e[0].name;
        document.getElementById("file-label1").textContent = name;
    }

    function readSingleFile2(e) {
        const name = e[0].name;
        document.getElementById("file-label2").textContent = name;
    }

    function readSingleFile3(e) {
        const name = e[0].name;
        document.getElementById("file-label3").textContent = name;
    }

    function readSingleFile4(e) {
        const name = e[0].name;
        document.getElementById("file-label4").textContent = name;
    }
</script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
    integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
    crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
    integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
