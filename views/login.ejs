<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/login.css" type="text/css">

  <title>Login</title>
</head>


<body>
  <!--importing navbar-->
  <%- include ('/nav') %>

  <!----login page design starts here-->
    <div class="container">
      <div class="row" id="chat-botCard">
        <!----Image Column-->
        <div class="col-12 col-lg-6 col-md-12 col-sm-12">
          <img src="/images/intro.jpg" class="img-fluid" alt="..." />
        </div>



        <!-----Login Form column--> 
        <div class="col-12 col-lg-6 col-md-12 col-sm-12"
          style="padding-top: 5px; padding-bottom: 5px; background-color:rgb(255, 234, 255);">

          <!----login form-->
          <div class="bg" id="col1">
            <div class="signup-form">
              <form action="/login" method="POST">

                <h2 class="text-center mb-4"><i class="fas fa-sign-in-alt"></i>Login</h2>

                <%- include ('/messages') %>

                  <div class="form-group">
                    <input type="email" class="form-control input-lg" name="email" placeholder="Email Address"
                      required="required">
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control input-lg" name="password" placeholder="Password"
                      required="required">
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block signup-btn">Login</button>
                  </div>
                  <div class="text-center text-capitalize font-weight-bold ">Don't have an account? <a
                      class="text-danger" href="/register">Register</a></div>

                  <div class="text-center text-capitalize "><a class="text-danger" href="/forgetPassword">Forgot
                      Password?</a></div>


              </form>


            </div>


          </div>

          <!----ends here-->
        </div>

      </div>
    </div>
  
<%- include ('/footer') %>
</body>
