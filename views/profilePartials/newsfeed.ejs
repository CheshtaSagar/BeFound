<link rel="stylesheet" href="/styles/optnewsfeed.css" type="text/css" />

<style>
  .mySwiper2 .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;

    /* Center slide text vertically */
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
  }

  .mySwiper2 .swiper-slide img {
    display: block;
    object-fit: cover;
    height: 350px;

  }

  .swiper-pagination2 {
    bottom: 0 !important;
  }
</style>






<!--------------newsfeed starts here-->
<%if(posts.length>0){%>
  <% posts.forEach(function(post){ %>


    <!----Card starts here------------------>
    <div class="row py-2" id="middle-row2">
      <div class="col">
        <div class="card">
          <div class="card-header py-0 px-0">
            <div class="row">
              <div class="col-10 row py-2">
                <a href="#" class="pl-4 pr-1">
                  <% if (post.postedBy.displayPicture) {%>
                    <img class="navimg" src="/image/<%= post.postedBy.displayPicture %>" alt="altt"
                      style="border-radius: 50%" />
                    <% }else{ %>
                      <img class="navimg"
                        src="https://img1.pnghut.com/1/16/10/nrdkyKR0fe/symbol-figure-icon-portrait-customer-redm.jpg"
                        alt="" style="border-radius: 50%" />
                      <% } %>
                </a>
                <div class="col">
                  <h6 class="py-0 px-0 mb-0" style="text-transform: capitalize;
                  font-weight:bolder;">
                    <%= post.postedBy.username%>
                  </h6>
                  <p class="mb-0" style="font-size: smaller;text-transform: capitalize;">Some place</p>
                </div>
              </div>

            </div>
          </div>
          <!-------image array swiper-->
          <div class="card-body px-0 py-0">

            <div class="swiper mySwiper2">
              <div class="swiper-wrapper">

                <% post.pictures.forEach(function(pic){ %>
                  <div class="swiper-slide">

                    <img src="/image/<%= pic %>" class="card-img " alt="Fissure in Sandstone" style="object-fit: contain;"/>
                  </div>
                  <%});%>
              </div>
              <div class="swiper-pagination swiper-pagination2"></div>
            </div>
            <!--------swiper ends here------------->


          </div>
          <div class="card-footer py-0">
            <div class="icons row">
              <div class="col-9">
                <i class="bi bi-heart fa-2x px-2"></i>
              </div>
            </div>
            <div class="about-post">
              <h6>104,424 likes</h6>
              <p></p>
              <h5>
                <%= post.postedBy.username%>
                  <span class="comment-content" style="font-size: small; 
                  color: rgb(39, 39, 38);
                  text-transform: capitalize;">
                    <%= post.description%>
                  </span>
              </h5>

              <%if(post.comments.length>0){%>
              <!-------View comments-->
              <a class="text-muted" onClick="showComments('<%= post.id %>')" id="show-comments-tag"
                href="javascript:void(0)" style="text-decoration: none;">View all comments</a>


              <!--All comments-------------------------------------------------------------------------->
              <div id="show-comments<%= post.id %>" style="display: none;">
                <% post.comments.forEach(function(com){ %>
                  <div class="row">
                    <%if(com.createdBy.id==user.id ){%>
                      <div class="col-6"></div>

                      <div class="col-6">

                        <h5 style="text-transform: capitalize;">

                          <% if (com.createdBy.displayPicture) {%>
                            <img class="commentimg" src="/image/<%= com.createdBy.displayPicture %>" alt="altt"
                              style="border-radius: 50%" />
                            <% }else{ %>
                              <img class="commentimg"
                                src="https://img1.pnghut.com/1/16/10/nrdkyKR0fe/symbol-figure-icon-portrait-customer-redm.jpg"
                                alt="" style="border-radius: 50%" />
                              <% } %>

                                <span style="font-size:medium;">
                                  <%= com.createdBy.username %>
                                </span>
                                <span class="comment-content" style="font-size: small; 
                    color: rgb(39, 39, 38);
                    text-transform: capitalize;">
                                  <%= com.comment %>
                                </span>
                        </h5>
                      </div>


                      <%}else{%>
                        <div class="col-6">
                          <h5 style="text-transform: capitalize;">

                            <% if (com.createdBy.displayPicture) {%>
                              <img class="commentimg" src="/image/<%= com.createdBy.displayPicture %>" alt="altt"
                                style="border-radius: 50%" />
                              <% }else{ %>
                                <img class="commentimg"
                                  src="https://img1.pnghut.com/1/16/10/nrdkyKR0fe/symbol-figure-icon-portrait-customer-redm.jpg"
                                  alt="" style="border-radius: 50%" />
                                <% } %>

                                  <span style="font-size:medium;">
                                    <%= com.createdBy.username %>
                                  </span>
                                  <span class="comment-content" style="font-size: small; 
                      color: rgb(39, 39, 38);
                      text-transform: capitalize;">
                                    <%= com.comment %>
                                  </span>
                          </h5>
                        </div>
                        <%}%>

                  </div>
                  <%});%>
              </div>
              <!---------------------------------------------------------------------------------------->

             
              <!-------hide comments-->
              <a class="text-muted" onClick="hideComments('<%= post.id %>')" id="hide-comments-tag<%=post.id%>"
                href="javascript:void(0)" style="text-decoration: none; display: none;">Hide all comments</a>
              <%}else{%>
                <a class="text-muted"  href="javascript:void(0)" style="text-decoration: none;">No Comments</a>
              <%}%>
              <!--------Form for posting comment-------------->
              <h4>

                <form action="/comment/post/<%= post.id %>" method="POST">
                  <div class="row">

                    <div class="col-10 pr-0">
                      <% if (user.displayPicture) {%>
                        <img class="commentimg" src="/image/<%= user.displayPicture %>" alt="altt"
                          style="border-radius: 50%" />
                        <% }else{ %>
                          <img class="commentimg"
                            src="https://img1.pnghut.com/1/16/10/nrdkyKR0fe/symbol-figure-icon-portrait-customer-redm.jpg"
                            alt="" style="border-radius: 50%" />
                          <% } %>
                            <form-group>
                              <input type="text" name="comment" placeholder="Add a comment " style="margin-top: -10px; 
                            border-radius:20px; 
                              font-size:18px;
                               font-family:'Times New Roman', Times, serif;
                               color: rgb(14, 5, 24);
                               padding: auto;" />
                            </form-group>
                    </div>

                    <div class="col-2" style="padding:2px 0px 2px 0px;">

                      <div class="form-group">
                        <input type="image" id="post-comment" class="commentimg" src="/images/send.png" alt="alt" />
                      </div>

                    </div>
                  </div>
                </form>
              </h4>
              <!------------------------------------------------------------------------------------------>
              <p class="text-muted">26 minutes ago</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!------------------------------------->
    <%});}else{%>
      <img src="/images/NoPosts.jpg" height="200px" alt=" ..." class="rounded pt-10 img-thumbnail" />
      <%}%>


        <script>

          function showComments(id) {
            var currentPost = 'show-comments' + id;
            var hidetag = 'hide-comments-tag' + id;
            console.log(currentPost);
            document.getElementById(currentPost).style.display = "unset";
            document.getElementById(hidetag).style.display = "unset";
            return true;
          }
          console.log("here");

          function hideComments(id) {
            var currentPost = 'show-comments' + id;
            var hidetag = 'hide-comments-tag' + id;
            console.log(currentPost);
            document.getElementById(currentPost).style.display = "none";
            document.getElementById(hidetag).style.display = "none";
            return true;
          }
        </script>