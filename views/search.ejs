      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Mali:wght@500&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
      integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Bungee+Inline&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/login.css" type="text/css" />
    <link rel="stylesheet" href="/styles/profile.css" type="text/css" />
    <link rel="stylesheet" href="/styles/search.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/swiper/swiper-bundle.min.css"
    />
    <link rel="stylesheet" href="/styles/optMatches.css" type="text/css" />
    <script src="/js/cities.js"></script>

    <title>Search</title>
  </head>

  <body>
    <!--importing navbar-->
    <%- include ('indexPartials/nav2') %>
    <section id="profile-main-section">
      <div>
        <img width="100%" src="/images/bc-about.jpg" alt="" />
      </div>
    </section>

    <section>
      <div class="search__body px-5">
        <div class="container-fluid">
          <div class="row" style="align-items: center">
            <!----search By Name---------------------------------------------------------------->
            <div class="col-md-6 col-sm-10 d-flex justify-content-center">
              <form
                class="form-inline"
                method="GET"
                action="/search/searchByName"
              >
                <input
                  class="form-control"
                  name="userName"
                  id="field"
                  type="search"
                  placeholder="Search By Name"
                  aria-label="Search"
                />
                <button class="btn" id="popup-button1" type="submit">
                  <i class="fa fa-search"></i>
                </button>
              </form>
            </div>
            <!------------------------------------------------------------------------------------->

            <!---add filters---------------------------------------------------------------------->
            <div class="col-md-6 col-sm-12 d-flex justify-content-center">
              <button
                type="button"
                id="filter-btn"
                class="btn btn-primary"
                data-toggle="modal"
                data-target="#exampleModalCenter"
              >
                Filter Your Search
              </button>
            </div>
            <!----------------------------------------------------------------------------------->
          </div>

          <br />
          <!--result cards-->
          <div class="container" style="width: 400px">
            <%if(data.length>0){%> <%data.forEach(function(result){%>

            <div class="row">
              <div class="col">
                <div class="matches-card">
                  <div class="match-user">
                    <div class="row">
                      <div class="col-2">
                        <% if (result.displayPicture) {%>
                        <img
                          src="/image/<%= result.displayPicture %>"
                          alt="user"
                          class="profile-photo-lg img-responsive"
                          style="object-fit: cover"
                        />
                        <% }else{ %>
                        <img
                          src="/images/dprofile.jpg"
                          alt="user"
                          class="profile-photo-lg"
                        />

                        <% } %>
                      </div>
                      <div class="col-4 pl-5">
                        <h5>
                          <a
                            class="profile-link"
                            style="
                              text-transform: capitalize;
                              text-decoration: none;
                            "
                          >
                            <%= result.username %>
                          </a>
                        </h5>
                        <p class="text-muted"><%= result.city %></p>
                      </div>
                      <div class="col-4 d-flex justify-content-center">
                        <a
                          id="show-profile-btn"
                          href="/showProfile/<%= result.id %>"
                          style="
                            color: rgb(255, 255, 255);
                            background-image: linear-gradient(
                              166deg,
                              #f22876 0%,
                              #942dd9 100%
                            );
                            border-radius: 20px;
                            text-decoration: none;
                            padding: 2px 8px;
                            height: 30px;
                          "
                        >
                          See Profile</a
                        >
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <%});%> <%}%>
          </div>
        </div>
      </div>
    </section>

    <!-----Modal for selecting filetrs-->
    <%- include ('searchPartials/modalForFilters') %>

    <div>
      <%- include ('partials/footer') %>
    </div>
  </body>

  <script
    src="https://kit.fontawesome.com/fba7a05067.js"
    crossorigin="anonymous"
  ></script>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
  />
